@model PostModel
@{
    ViewData["Title"] = "Create";
}
@{
    TopicModel Topic = ViewBag.Topic;
}
<div class="heading">
    <div class="row">
        <div class="col-xs-8">
            <span class="title">
                <i class="fa fa-file-text-o"></i> @Topic.Headline
            </span>
        </div>
        <div class="col-xs-4">
            <div class="action-bar">
                @*<a asp-action="create" class="btn btn-warning"><i class="fa fa-edit"></i>Edit Topic</a>*@
            </div>
        </div>
    </div>
    <hr />
</div>

<div class="panel panel-default">
    <div class="panel-body">
        @Topic.Description
        <hr />
        <div class="row">
            <div class="col-xs-6">
                <p>By &nbsp; <i class="fa fa-user"></i>@Topic.Author.FullName &nbsp; <i class="fa fa-calendar"></i>@Topic.DateCreated.ToString("MMM dd, yyyy")</p>
            </div>
            <div class="col-xs-6">
                <p class="text-right"><i class="fa fa-reply"></i>@Topic.Replies.Count</p>
            </div>
        </div>
    </div>
</div>


<div class="heading">
    <div class="row">
        <div class="col-xs-8">
            <span class="title">
                <i class="fa fa-reply"></i> Reply
            </span>
        </div>
        <div class="col-xs-4">
            <div class="action-bar">
                @*<a asp-action="create" class="btn btn-warning"><i class="fa fa-edit"></i>Edit Topic</a>*@
            </div>
        </div>
    </div>
    <hr />
</div>


<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <form asp-action="create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="TopicId" value="@Topic.TopicId"/>
                    <div class="form-group">
                        <textarea asp-for="Body" class="form-control" placeholder="Enter Reply Here"></textarea>
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                    <div class="form-group text-right">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

